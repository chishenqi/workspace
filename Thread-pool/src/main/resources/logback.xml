<?xml version='1.0' encoding='UTF-8'?>
<configuration>
    <appender name='CONSOLE' class='ch.qos.logback.core.ConsoleAppender'>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %5p %-40logger{40}:%L[%t] - %m%n</pattern>
        </encoder>
    </appender>

    <root>
        <level value='INFO'/>
        <appender-ref ref='CONSOLE'/>
    </root>
</configuration>
